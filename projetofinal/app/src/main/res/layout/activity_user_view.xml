<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#A2E7FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/labelMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃ©dico"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textSize="25dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:minHeight="120dp"
                android:layout_margin="25dp"
                android:padding="10dp"
                android:background="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomeProfissional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/ocupacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="20dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="35dp"
                    android:text="TextView"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/labelDentista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dentista"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textSize="25dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:minHeight="120dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#F5F5F5"
                >

                <TextView
                    android:id="@+id/nomeDentista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/horarioDente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="TextView" />

            </LinearLayout>

            <TextView
                android:id="@+id/labelProfissionais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profissionais cadastrados"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textSize="20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:paddingStart="30dp"
                android:id="@+id/listaRecycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>